<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="DuplicateDefinition">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="GradientBackground">
        <item name="android:background">@drawable/background_gradient</item>
    </style>

    <style name="RoundedButton">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">@dimen/elevation</item>

    </style>

    <style name="RoundedDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
    </style>



    <style name="RoundedButtonSecondary" >
        <item name="android:backgroundTint">#4F598C</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>




    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:background">#2196F3</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

    <style name="CustomDrawerStyle">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@color/blue_light</item>
    </style>

    <!-- Estilo para los items del NavigationDrawer -->
    <style name="CustomDrawerItemStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Estilos para el encabezado del drawer -->
    <style name="CustomDrawerHeader">
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>

